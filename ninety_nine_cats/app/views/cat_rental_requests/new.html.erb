<h1>Add a request for rental!</h1>

<form action=  '<%= cat_rental_requests_url %>' method="post">

  <br>

  <label for="Id">Cat Id</label>
  <select name="cat_rental_request[cat_id]">
    <option disabled selected>--Please Select a Cat--</option>
    <% @cats.each do |cat| %>
      <% name = cat.name %>
      <% id = cat.id %>
      <option value= <%= id %>  ><%= name %></option>
    <% end %>
  </select>

  <br>

  <label for="start_date">Start Date</label>
  <input id="start_date" type="date" name="cat_rental_request[start_date]" >

  <label for="end_date">End Date</label>
  <input id="end_date" type="date" name="cat_rental_request[end_date]" >

  <br>

  <input type="submit" value= "Add a request">
</form>
